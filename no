const calendar = document.getElementById('calendar');
const months = [
    { name: 'August', year: 2024, days: 31, startDay: 4 },  // August starts on a Thursday in 2024
    { name: 'September', year: 2024, days: 30, startDay: 0 }, // September starts on a Sunday in 2024
    { name: 'October', year: 2024, days: 31, startDay: 2 },
    { name: 'November', year: 2024, days: 30, startDay: 5 },
    { name: 'December', year: 2024, days: 31, startDay: 0 },
    { name: 'January', year: 2025, days: 31, startDay: 3 },
    { name: 'February', year: 2025, days: 28, startDay: 6 }, // Not a leap year, so 28 days
    { name: 'March', year: 2025, days: 31, startDay: 6 },
    { name: 'April', year: 2025, days: 30, startDay: 2 },
    { name: 'May', year: 2025, days: 31, startDay: 4 },
    { name: 'June', year: 2025, days: 30, startDay: 0 }
];

const daysOfWeek = ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'];

function createCalendar() {
    months.forEach((month) => {
        // Create month and year header
        const header = document.createElement('header');
        header.textContent = `${month.name} ${month.year}`;
        calendar.appendChild(header);

        // Create days of the week row
        const daysRow = document.createElement('div');
        daysRow.className = 'days-row';
        daysOfWeek.forEach(day => {
            const dayElement = document.createElement('div');
            dayElement.className = 'day-name';
            dayElement.textContent = day;
            daysRow.appendChild(dayElement);
        });
        calendar.appendChild(daysRow);

        // Create calendar grid
        const grid = document.createElement('div');
        grid.className = 'calendar';
        calendar.appendChild(grid);

        // Add empty boxes for days before the start of the month
        for (let i = 0; i < month.startDay; i++) {
            const emptyDay = document.createElement('div');
            emptyDay.className = 'empty-day';
            grid.appendChild(emptyDay);
        }

        // Create day boxes
        for (let i = 1; i <= month.days; i++) {
            const day = document.createElement('div');
            day.className = 'day';
            day.textContent = i;
            // Click event to redirect to data input page
            day.onclick = () => window.location.href = `data.html?date=${month.name}%20${i},%20${month.year}`;
            grid.appendChild(day);
        }
    });
}

createCalendar();
document.addEventListener('DOMContentLoaded', () => {
    const inputText = document.getElementById('inputText');
    const savedMessage = document.getElementById('savedMessage');

    // Load saved text if it exists
    const savedText = localStorage.getItem('savedText');
    if (savedText) {
        inputText.value = savedText;
        savedMessage.textContent = 'Previously saved text loaded.';
    }

    // Save text when the "Save" button is clicked
    document.getElementById('saveButton').addEventListener('click', () => {
        const text = inputText.value;
        localStorage.setItem('savedText', text);
        savedMessage.textContent = 'Text saved!';
    });

    // Clear the saved text and textarea content
    document.getElementById('clearButton').addEventListener('click', () => {
        localStorage.removeItem('savedText');
        inputText.value = '';
        savedMessage.textContent = 'Text cleared!';
    });
});
